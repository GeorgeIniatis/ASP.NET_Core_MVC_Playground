@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1 class="p-1 text-left">Log In</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="col-lg-12 p-1">
                    <h1 class="text-left">Use a local account</h1>
                    <hr>
                    <form id="account" method="post" class="py-2">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <small class="form-text text-muted text-right">
                                <a id="forgot-password" asp-page="./ForgotPassword"> <b> Forgot your password? </b></a>
                            </small>
                            <small class="form-text text-muted text-right">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><b> Register as a new user </b></a>
                            </small>
                            <small class="form-text text-muted text-right">
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation"><b> Resend email confirmation </b></a>
                            </small>
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <input asp-for="Input.RememberMe" class="form-check-input" />
                                <label class="form-check-label">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Log in</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-lg-12 p-1">
                    <h1 class="text-center">Use another service&nbsp;</h1>
                    <hr>
                </div>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div id="socialLoginList">
                        <div class="row text-center">
                            <div class="col-md-12 my-1">
                                <button type="submit" class="btn text-white w-75" id="Google" name="provider" value="Google" style="background: rgb(221, 75, 57);"><i class="fa fa-fw fa-1x py-1 fa-brands fa-google"></i>&nbsp;<b>Login with Google</b></button>
                            </div>
                        </div>

                        <div class="row text-center">
                            <div class="col-md-12 my-1">
                                <button type="submit" class="btn text-white w-75" id="Twitter" name="provider" value="Twitter" style="background: rgb(85, 172, 238);"><i class="fa fa-fw fa-1x py-1 fa-brands fa-twitter"></i>&nbsp;<b>Login with Twitter</b></button>
                            </div>
                        </div>

                        <div class="row text-center">
                            <div class="col-md-12 my-1">
                                <button type="submit" class="btn text-white w-75" id="Facebook" name="provider" value="Facebook" style="background: rgb(59, 89, 152);"><i class="fa fa-fw fa-1x py-1 fa-brands fa-facebook-square"></i>&nbsp;<b>Login with Facebook</b></button>
                            </div>
                        </div>

                        <div class="row text-center">
                            <div class="col-md-12 my-1">
                                <button type="submit" class="btn text-white w-75 btn-primary" id="Microsoft" name="provider" value="Microsoft"><i class="fa fa-fw fa-1x py-1 fa-brands fa-windows"></i>&nbsp;<b>Login with Microsoft</b></button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
