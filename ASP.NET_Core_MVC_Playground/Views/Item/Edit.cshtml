@model ASP.NET_Core_MVC_Playground.Models.ItemImageViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="py-5 text-center">
    <div class="container">
        <div class="row">
            <div class="mx-auto col-lg-6 col-10">
                <h1>Edit Item</h1>
                <hr />
                <form id="Edit-Item-Form" asp-action="Edit" enctype="multipart/form-data" class="text-left">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Item.Id" />
                    <input type="hidden" asp-for="Item.Description" />
                    <input type="hidden" asp-for="Item.ImageBytes" />

                    <div class="form-group">
                        <input asp-for="Item.Name" class="form-control" placeholder="Name" />
                        <span asp-validation-for="Item.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Item.Price" class="form-control" placeholder="Price" />
                        <span asp-validation-for="Item.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select name="Item.SellerId" class="form-control"
                                asp-items="@ViewBag.sellers"
                                data-val="true"
                                data-val-required=@AppResources.ItemModel.ValidSeller>
                        </select>
                        <span asp-validation-for="Item.SellerId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Item.StripeImageUrl" class="form-control" placeholder="Stripe Image Url" />
                        <span asp-validation-for="Item.StripeImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="image-dropzone text-center dropzone form-control h-auto" id="image-dropzone"
                             style="background-color: #f7e6e6;
                                            border: dashed 3px;
                                            border-color: red;
                                            border-radius: 25px;">
                            <div class="row pt-2 w-25 mx-auto">
                                <div class="col-12">
                                    <i class="fa fa-solid fa-file-image fa-4x"></i>
                                </div>
                            </div>
                            <div class="row pt-2 w-50 mx-auto">
                                <div class="col-12">
                                    <b> <b> Drop Image Here </b> </b>
                                </div>
                            </div>
                            <div class="row w-25 mx-auto">
                                <div class="col-12">
                                    <b class="bold-text" style="color: grey;"> <b>  Or </b>  </b>
                                </div>
                            </div>
                            <div class="row pt-2 w-50 mx-auto">
                                <div class="col-12">
                                    <b class="upload-button" style="background-color: red;
                                                                            border: none;
                                                                            border-radius: 15px;
                                                                            color: white;
                                                                            padding: 10px 20px;
                                                                            text-align: center;
                                                                            font-size: 14px;">
                                        Upload File
                                    </b>
                                </div>
                            </div>
                        </div>

                        <input type="hidden" asp-for="ImageFile" />
                        <!--
        <label asp-for="ImageFile" class="control-label"></label>
        <input type="file" asp-for="ImageFile" class="form-control h-25" data-val="true" data-val-required="Please upload an image" accept=".png, .jpg, .jpeg, .gif" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
        -->
                    </div>
                    <div class="form-group">
                        <div class="txt-dropzone text-center dropzone form-control h-auto" id="txt-dropzone"
                             style="background-color: #f7e6e6;
                                            border: dashed 3px;
                                            border-color: red;
                                            border-radius: 25px;">
                            <div class="row pt-2 w-25 mx-auto">
                                <div class="col-12">
                                    <i class="fa-solid fa-file-lines fa-4x"></i>
                                </div>
                            </div>
                            <div class="row pt-2 w-50 mx-auto">
                                <div class="col-12">
                                    <b> <b> Drop Description Here </b> </b>
                                </div>
                            </div>
                            <div class="row w-25 mx-auto">
                                <div class="col-12">
                                    <b class="bold-text" style="color: grey;"> <b>  Or </b>  </b>
                                </div>
                            </div>
                            <div class="row pt-2 w-50 mx-auto">
                                <div class="col-12">
                                    <b class="upload-button" style="background-color: red;
                                                                            border: none;
                                                                            border-radius: 15px;
                                                                            color: white;
                                                                            padding: 10px 20px;
                                                                            text-align: center;
                                                                            font-size: 14px;">
                                        Upload File
                                    </b>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" asp-for="TextFile">
                        <!--
        <label asp-for="TextFile" class="control-label"></label>
        <input type="file" asp-for="TextFile" class="form-control h-25" data-val="true" data-val-required="Please upload a text file" accept=".txt" />
        <span asp-validation-for="TextFile" class="text-danger"></span>
        -->
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <input id="SubmitButton" type="submit" value="Edit" class="btn btn-primary w-100" />
                        </div>
                        <div class="col">
                            <a class="btn btn-primary w-100" asp-action="Index">
                                <i class="fa-solid fa-right-from-bracket"></i> Back
                            </a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); },
    @{await Html.RenderPartialAsync("_CreateEditPartial"); },
    @{await Html.RenderPartialAsync("_BootboxAlertPartial"); }
}

